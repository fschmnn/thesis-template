\rohead[]{\makebox{\makebox[\textwidth][l]{\hfill\color{headercolor}\normalfont\headmark}{\normalsize\quad\pagemark}}}

% for pages with empty header, the page number is in the footer
\rofoot[\pagemark]{}
\lefoot[\pagemark]{}


\ifdraft
  % add draft mark if draft option is used
  \newcommand{\draftversion}{\normalfont\color{darkgray}\small\vspace{-6.\baselineskip}[\monthyeardate\today\ -- draft version]}
  \cfoot[\draftversion]{\draftversion}
\fi


% this belogns to biblatex, but the $ messes up the syntax highlighting
\DeclareStyleSourcemap{
    \maps[datatype=bibtex]{
      \map{
        \step[fieldsource=author, match=\regexp{([^,]+),\s+(.).*?\sand}, final]
        \step[fieldset=sortname, fieldvalue=$1, final]
          } 
}}

