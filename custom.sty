% import table with model parameters
\newcommand{\insertdatatable}[1]{
\pgfplotstabletypeset[
    header=false,
    col sep=semicolon,
    columns={0,1,2,3,4,5,6},
    columns/0/.style={column name=model,string type},
    columns/1/.style={fixed,fixed zerofill=true,precision=4,column type=r,column name=Zinit},
    columns/2/.style={fixed,fixed zerofill,precision=2,column type=c,column name=$\log M_\text{cl}/\si{\Msun}$},
    columns/3/.style={fixed,fixed zerofill,precision=2,column type=c,column name=$\SFE$},
    columns/4/.style={fixed,fixed zerofill,precision=0,column type=c,column name=$n_\text{cl}/\si{\per \cubic \cm}$},
    columns/5/.style={fixed,fixed zerofill,precision=0,column type=c,column name=$N_\text{pop}$},
    columns/6/.style={fixed,fixed zerofill,precision=2,column type=c,column  name=$\log M_\text{cluster}/\si{\Msun}$},
    every head row/.style={before row=\toprule, after row=\midrule}, 
    every last row/.style={after row=\bottomrule}
    ]{#1}
}

\newcommand{\insertresulttable}[1]{
\pgfplotstabletypeset[
    header=false,
    col sep=semicolon,
    columns={0,7,8,9,10,11,12},
    columns/0/.style={column name=model,string type},
    columns/7/.style={fixed,fixed zerofill,precision=2,column type=r,column name=$\abundance{Fe}{H}$},
    columns/8/.style={fixed,fixed zerofill,precision=3,column type=c,column name=$\Delta\abundance{O}{Fe}$},
    columns/9/.style={fixed,fixed zerofill,precision=3,column type=c,column name=$\Delta\abundance{Na}{Fe}$},
    columns/10/.style={fixed,fixed zerofill,precision=3,column type=c,column name=$\Delta\abundance{Fe}{H}$},
    columns/11/.style={fixed,fixed zerofill,precision=3,column type=c,column name=$\Delta Y$},
    columns/12/.style={sci,sci zerofill,precision=2,column type=c,column name=$\Delta$CNO},
    every head row/.style={before row=\toprule, after row=\midrule}, 
    every last row/.style={after row=\bottomrule}
    ]{#1}
}

